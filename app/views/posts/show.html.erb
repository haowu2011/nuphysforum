<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1> <%= @post.content %> </h1>
      <a href="/posts/<%= @post.id %>/edit">Edit</a> |
      <a href="/posts/<%= @post.id %>/destroy">Destroy</a>
      <div>
        <a href="/categories">Back to index</a>
      </div>

      <h2> New Comment </h2>
      <form action="/create_comment">
        <div class="form-group">
          <input id="contents" name="contents" type="text" class="form-control"/>
          <input type="hidden" name="post_id" value="<%=@post.id%>">
        </div>
      </form>
      
    
      
      <div class="Comments">
        <h2>Comments</h2>
        
        <% @post.comments.each do |comment| %>
        <% if comment.user %>
          <div class="media">
            <a class="pull-left" href="/users/<%=comment.user.id%>">
              <img class="media-object" src="<%=comment.user.user_image %>" alt="user-image">
            </a>
            <div class="media-body">
              <h3> <div><%= comment.user.user_name %></div> </h3>
              <div><%= comment.content %></div>
              <div><a href="/comments/<%= comment.id %>/destroy">Destroy</a>    |
                    <a href="/comments/<%= comment.id %>/edit">Edit</a></div>
            </div>
          </div> 
        <% end %>
        <% end %>
        
        
        
      
      </div>
    </div>
  </div>


